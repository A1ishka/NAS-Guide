<?xml version="1.0" encoding="utf-8"?>
<layer-list>

    <item>

        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            <corners
                android:topLeftRadius="@dimen/dialog_language_corners"
                android:topRightRadius="@dimen/dialog_language_corners"/>
            <solid android:color="@color/white"/>

        </shape>

    </item>

    <item>

        <ripple
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:color="@color/dialog_language_ripple">

            <item android:id="@android:id/mask">

                <shape android:shape="rectangle">

                    <corners
                        android:topRightRadius="@dimen/dialog_language_corners"
                        android:topLeftRadius="@dimen/dialog_language_corners"/>
                    <solid android:color="@color/dialog_language_ripple"/>

                </shape>

                <color android:color="@color/dialog_language_ripple"/>

            </item>

        </ripple>

    </item>

</layer-list>