<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    tools:ignore="ContentDescription"
    tools:context="by.ssrlab.ui.MainActivity"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbar_lang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/background_button_round"

            android:layout_marginVertical="@dimen/toolbar_margin"
            android:layout_marginEnd="@dimen/toolbar_margin"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/toolbar_lang_action"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:src="@drawable/ic_language"
                android:background="@drawable/ripple_rounded_toolbar"

                android:padding="@dimen/toolbar_button_padding"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbar_search_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/background_button_round"

            android:layout_marginVertical="@dimen/toolbar_margin"
            android:layout_marginEnd="@dimen/toolbar_margin"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/toolbar_lang">

            <ImageButton
                android:id="@+id/toolbar_search_icon_action"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:src="@drawable/ic_language"
                android:background="@drawable/ripple_rounded_toolbar"

                android:padding="@dimen/toolbar_button_padding"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/background_button_round"

            android:visibility="gone"

            android:layout_marginVertical="@dimen/toolbar_margin"
            android:layout_marginStart="@dimen/toolbar_margin"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageButton
                android:id="@+id/toolbar_back_action"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:src="@drawable/ic_back"
                android:background="@drawable/ripple_rounded_toolbar"

                android:padding="@dimen/toolbar_button_padding"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbar_search_input_holder"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tsi_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="@dimen/toolbar_text"

                android:layout_marginVertical="@dimen/toolbar_margin"
                android:layout_marginEnd="@dimen/toolbar_margin"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"

                android:layout_marginHorizontal="@dimen/toolbar_margin"
                android:layout_marginVertical="@dimen/toolbar_tsi_margin"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tsi_cancel">

                <!--        TODO        -->

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/toolbar_search_results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@id/toolbar_search_input_holder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>